# Copy this file to .env.local (or .env) and fill in the secrets for local testing.

# InfluxDB connection
INFLUXDB_HOST=https://<region>.aws.cloud2.influxdata.com
INFLUXDB_ORG=your-org
INFLUXDB_TOKEN=your-token-here

# Bucket aliases (override if変更する場合のみ)
INFLUXDB_BUCKET_RAW_1M_HOT=raw_1m_hot
INFLUXDB_BUCKET_RAW_1M_BACKFILL=raw_1m_backfill
INFLUXDB_BUCKET_AGG_5M=agg_5m
INFLUXDB_BUCKET_AGG_1D=agg_1d

# Optional runtime tuning
INFLUXDB_WRITE_BATCH_SIZE=5000
INFLUXDB_WRITE_FLUSH_INTERVAL_MS=1000
INFLUXDB_MAX_RETRIES=3
INFLUXDB_RETRY_BACKOFF_SECONDS=5
